<!doctype html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dogendar</title>
    {{#if showTests}}
        <link rel="stylesheet" href="/vendor/mocha.css" />
    {{/if}}
    <script src="http://code.jquery.com/jquery-2.0.2.min.js"></script>
    <link rel='stylesheet' href='stylesheets/bootstrap.min.css'>
    <link rel="stylesheet" href="stylesheets/style.css">
</head>
<body>
<header>
    <div class="container">
        <div class="col-md-10">
            <div class="navbar navbar-default navbar-fixed-top">
                <div class="container-fluid">
                    <a id="navbar-logo" class="navbar-brand" href="/">Dogendar</a>
                    <div id="navbar-slogan">Keep track of your dog's schedule</div>
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav navbar-right">
                            <li><a href="/">home</a></li>
                            {{#if user}}
                                <li><a href="/users">{{user.displayname}}</a></li>
                                <li><a href="/viewschedule">view schedule</a></li>
                                <li><a href="/logout">logout</a></li>
                            {{else}}
                                <li><a href="/login">login</a></li>
                                <li><a href="/register">register</a> </li>
                            {{/if}}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
<div class="container">
    <div id="banner" class="page-header">
        <div class="col-lg-8">
            <h1>Dogendar</h1>
        </div>
    </div>
    <div class="col-md-10">
        {{{body}}}
    </div>
</div>
</body>
<script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.11.1/jquery.validate.min.js"></script>
<script src="/lib/bootstrap/bootstrap.js"></script>
<script src="/lib/Ember/handlebars-v1.3.0.js"></script>
<script src="/lib/Ember/ember.js"></script>
<script src="/lib/Ember/ember-data.js"></script>
<script src="/js/Ember/app.js"></script>
</html>